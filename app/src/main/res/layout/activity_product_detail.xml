<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_id_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/id_of_the_product"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD"/>

        <TextView
            android:id="@+id/product_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD"/>

        <TextView
            android:id="@+id/product_detail_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_of_the_product"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD"/>

        <EditText
            android:id="@+id/product_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#2B3D4D"/>

        <TextView
            android:id="@+id/product_detail_quantity_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quantity_of_the_product"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD"/>

        <TextView
            android:id="@+id/product_detail_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD"/>

        <TextView
            android:id="@+id/product_detail_price_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price_of_the_product"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD"/>

        <EditText
            android:id="@+id/product_detail_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD"/>

        <TextView
            android:id="@+id/product_detail_imageResourceId_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/image_resource_id_of_the_product"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD"/>

        <EditText
            android:id="@+id/product_detail_imageResourceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD"/>

    </LinearLayout>

    <Button
        android:id="@+id/product_detail_quantity_increase_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/increase"/>

    <Button
        android:id="@+id/product_detail_quantity_decrease_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/decrease"/>

    <Button
        android:id="@+id/product_detail_quantity_delete_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_product"/>

</LinearLayout>